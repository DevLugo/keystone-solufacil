# Base de datos (requerido)
DATABASE_URL=postgresql://username:password@hostname:5432/database_name

# Autenticación (requerido) - Debe ser una cadena aleatoria de al menos 32 caracteres
SESSION_SECRET=your-super-secret-session-key-at-least-32-characters-long

# Entorno (requerido)
NODE_ENV=production

# Puerto (opcional, Render lo asigna automáticamente)
PORT=3000

# Para Shadow Database (opcional, solo si Neon lo requiere)
SHADOW_DATABASE_URL=postgresql://username:password@hostname:5432/shadow_database_name

# Variables adicionales para desarrollo (opcional)
# KEYSTONE_DEV_MODE=false 
# Cloudinary Configuration para manejo de imágenes
CLOUDINARY_CLOUD_NAME=your-cloud-name
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret
