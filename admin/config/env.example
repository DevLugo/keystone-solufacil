# ========================================
# CONFIGURACIÓN DEL BOT DE TELEGRAM
# ========================================
# 
# IMPORTANTE: 
# 1. Copia este archivo como .env
# 2. Reemplaza los valores con tu configuración real
# 3. NUNCA subas el archivo .env al repositorio
# 4. Mantén este archivo env.example actualizado

# ========================================
# CONFIGURACIÓN PRINCIPAL
# ========================================

# Token del bot de Telegram (obtener de @BotFather)
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Chat ID por defecto (usuario individual o grupo)
TELEGRAM_DEFAULT_CHAT_ID=123456789

# URL del webhook (opcional, para recibir actualizaciones)
TELEGRAM_WEBHOOK_URL=https://tu-dominio.com/webhook/telegram

# ========================================
# CONFIGURACIÓN POR ENTORNO
# ========================================

# DESARROLLO
TELEGRAM_BOT_TOKEN_DEV=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_DEFAULT_CHAT_ID_DEV=123456789

# PRODUCCIÓN
TELEGRAM_BOT_TOKEN_PROD=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_DEFAULT_CHAT_ID_PROD=123456789

# PRUEBAS
TELEGRAM_BOT_TOKEN_TEST=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz
TELEGRAM_DEFAULT_CHAT_ID_TEST=123456789

# ========================================
# CONFIGURACIÓN AVANZADA
# ========================================

# Usuarios permitidos para usar el bot (separados por comas)
TELEGRAM_ALLOWED_USERS=123456789,987654321,555666777

# Usuarios administradores del bot (separados por comas)
TELEGRAM_ADMIN_USERS=123456789,987654321

# Formato por defecto de los reportes (text o pdf)
TELEGRAM_DEFAULT_FORMAT=text

# Zona horaria por defecto
TELEGRAM_DEFAULT_TIMEZONE=America/Mexico_City

# ========================================
# CONFIGURACIÓN DE SEGURIDAD
# ========================================

# Habilitar logs detallados (true/false)
TELEGRAM_DEBUG_MODE=true

# Tiempo máximo de espera para envíos (en ms)
TELEGRAM_TIMEOUT=30000

# Número máximo de reintentos en caso de error
TELEGRAM_MAX_RETRIES=3

# ========================================
# CONFIGURACIÓN DE REPORTES
# ========================================

# Habilitar envío automático de reportes (true/false)
TELEGRAM_AUTO_REPORTS=true

# Hora por defecto para envío automático (formato 24h)
TELEGRAM_DEFAULT_HOUR=09

# Días por defecto para envío automático (separados por comas)
TELEGRAM_DEFAULT_DAYS=monday,wednesday,friday

# ========================================
# NOTAS IMPORTANTES
# ========================================
#
# 1. El token del bot debe obtenerse de @BotFather en Telegram
# 2. El Chat ID puede ser positivo (usuario) o negativo (grupo)
# 3. Para obtener el Chat ID, envía un mensaje al bot y revisa:
#    https://api.telegram.org/bot<TOKEN>/getUpdates
# 4. Los usuarios deben iniciar el bot antes de recibir mensajes
# 5. El bot solo puede enviar mensajes, no leer conversaciones
# 6. Para grupos, el bot debe ser agregado como administrador
#
# ========================================
